<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey">


    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/ic_close_24" />

    <TextView
        android:id="@+id/tv_about_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/backBtn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/secondaryColor"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/actors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_about_movie_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="@string/actors"
        android:textColor="@color/secondaryColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_actors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actors"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_actors"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/country"
        android:textColor="@color/secondaryColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_country"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/description"
        android:textColor="@color/secondaryColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:maxLines = "35"
        android:scrollbars = "vertical"/>

</RelativeLayout>